{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2015",
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "node_modules"
  ]
}
